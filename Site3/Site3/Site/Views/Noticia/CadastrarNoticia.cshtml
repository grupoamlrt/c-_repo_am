@model Site.Models.NoticiasModel
@{
    ViewBag.Title = "CadastrarNoticia";
}

<h2>Cadastrar Noticia</h2>
@using (Html.BeginForm())
{
    <table class="table">
        <tr>
            <td>
                @Html.LabelFor(model => model.Codigo)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Codigo, "")
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Titulo)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Titulo, "")
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Descricao)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Descricao, "")
            </td>
        </tr>
        <tr>
            <td colspan="2" style="text-align:right"><input type="submit" value="Cadastrar" /></td>
        </tr>
    </table>
    <br />
    @Html.ActionLink("Voltar", "Index")
}


