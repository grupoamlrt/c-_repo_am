@model IEnumerable<Site.Models.NoticiasModel>
@{
    ViewBag.Title = "Listar";
}

<h2>Listar</h2>
<table class="table">
    <tr>
        @*<th>@Html.DisplayNameFor(model => model.IDNoticia)</th>*@
        <th>@Html.DisplayNameFor(model => model.Titulo)</th>
        <th>@Html.DisplayNameFor(model => model.Descricao)</th>
        <th>@Html.DisplayNameFor(model => model.DataNoticia)</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            @*<td>@Html.DisplayFor(modelitem => item.IDNoticia)</td>*@
            <td>@Html.DisplayFor(modelitem => item.Titulo)</td>
            <td>@Html.DisplayFor(modelitem => item.Descricao)</td>
            <td>@Html.DisplayFor(modelitem => item.DataNoticia)</td>
        </tr>
    }
</table>
<br />
@Html.ActionLink("Voltar", "Index")

